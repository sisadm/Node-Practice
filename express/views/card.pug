extends app 

block card  
  section(class=`flashcards`)
    .card(class=`card-${side}`)
      .card-header 
      h1.card-title= side 
      #content 
        h2= text 
        if hint
          p hint 
            i= hint 
      .card-flip-wrap
        if hint != ''
          a(href=`http://localhost:3000/cards/${id}?side=${side}`)
            img.card-flip(src='/static/img/flip.svg')
        else 
          a(href=`http://localhost:3000/cards/${id}?side=${side}`)
            img.card-flip(src='/static/img/next.svg')
  script(src="/static/js/app.js") 