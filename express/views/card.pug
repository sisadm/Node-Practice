extends layout.pug

block content
  section#content
    h2= text
    if hint
      p
        i Hint: #{hint}
    a
    if hint != ''
      a(href=`http://localhost:3000/cards/${id}?side=${side}`) Answer
    else 
      a(href=`http://localhost:3000/cards/${id}?side=${side}`) Question 

    br
    a(href="/cards") Next Card   